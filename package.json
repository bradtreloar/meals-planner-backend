{
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "yarn clean && babel src --out-dir dist --extensions \".ts,.js\"",
    "start": "node ./dist/index.js",
    "test": "jest --rootDir ./src"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "core-js": "^3.21.1",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "regenerator-runtime": "^0.13.9",
    "sequelize": "^6.17.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@faker-js/faker": "^6.0.0-alpha.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.179",
    "@types/sqlite3": "^3.1.8",
    "babel-plugin-module-resolver": "^4.1.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-typescript",
        {
          "allowDeclareFields": true
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "alias": {
            "^@app/(.+)": "./src/\\1"
          }
        }
      ]
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/setupTests.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTestsAfterEnv.ts"
    ]
  }
}
